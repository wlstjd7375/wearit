<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.wearit.android.view.account.FindPasswordActivity"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_border"
        layout="@layout/toolbar_with_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:paddingBottom="70dp"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:hint="E-mail"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:hint="PHONE NUMBER"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="phone"/>
            
            <Button
                android:id="@+id/btSendSMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/green"
                android:text="인증번호 전송" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/dark_gray"/>

            <EditText
                android:id="@+id/etCertification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="30dp"
                android:hint="인증번호"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="number"/>
            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:hint="새 비밀번호"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/etNewPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:hint="비밀번호 확인"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/green"
                android:text="확인" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
