<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="34dp"
        android:paddingRight="33dp"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_price_guide"
                android:textColor="#000000"
                android:text="총 상품금액"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_product_price_guide"
                android:layout_marginLeft="40dp"
                android:gravity="right"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_calcul_price"
                    android:text="170,000 원 + 200,000원+ 42,000원"
                    android:textSize="11sp"
                    android:textColor="#6b6b6b"
                    android:includeFontPadding="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_product_price"
                    android:textColor="#000000"
                    android:text="0 원"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tip_price_guide"
                android:textColor="#000000"
                android:text="총 배달팁"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_tip_price_guide"
                android:layout_marginLeft="40dp"
                android:gravity="right"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_calcul_tip"
                    android:text="170,000 원 + 200,000원+ 42,000원"
                    android:textSize="11sp"
                    android:textColor="#6b6b6b"
                    android:includeFontPadding="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="0 원"
                    android:id="@+id/tv_tip_price"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_coupon_price_guide"
                android:textColor="#000000"
                android:text="쿠폰 할인"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_coupon_price_guide"
                android:layout_marginLeft="40dp"
                android:gravity="right"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d30000"
                    android:text="0 원"
                    android:id="@+id/tv_coupon_price"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bababa"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_total_price_guide"
                android:textColor="#000000"
                android:text="총 결제금액"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_total_price_guide"
                android:layout_marginLeft="40dp"
                android:gravity="right"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="0 원"
                    android:id="@+id/tv_total_price"
                    android:textSize="13sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="27dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="받는 사람 정보"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_modify_receiver"
                android:text="수정"
                android:textColor="#7e7e7e"
                android:textSize="15sp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receiver_name"
                android:text="Name"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receiver_phone"
                android:text="010-1234-1234"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receiver_email"
                android:text="010-1234-1234"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receiver_address1"
                android:maxLines="1"
                android:text="010-1234-1234"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receiver_address2"
                android:maxLines="1"
                android:text="010-1234-1234"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_not_correct_addr"
                    android:textSize="13sp"
                    android:textColor="#ababab"
                    android:text="주소가 부정확 하다면 체크해주세요.\n주문 즉시 상담원이 전화를 드립니다."
                    android:includeFontPadding="false"/>
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="13sp"-->
                <!--android:textColor="#ababab"-->
                <!--android:text="주소가 부정확 하다면 체크해주세요.\n주문 즉시 상담원이 전화를 드립니다."-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:includeFontPadding="false"/>-->
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_reservation"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="30dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="예약시간 설정하기"
            android:layout_marginLeft="4dp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ababab"
            android:textSize="13sp"
            android:text="원하는 시간을 설정하면 지정한 장소로 상품을 배달합니다."
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:includeFontPadding="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_add_product_guide"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="샵 추가상품 구성하기(OPTION)"
            android:layout_marginLeft="4dp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ababab"
            android:textSize="13sp"
            android:text="방문 배달 시 구매하시는 브랜드의 상품들을 추가로 볼 수 있는 서비스로 구매하지 않으셔도 무방합니다.\n- 사이즈는 회원정보에 기재된 신체사이즈를 토대로 배달됩니다."
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:includeFontPadding="false"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_add_product"
        android:paddingTop="26dp"
        android:visibility="gone">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="50dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송 요청 사항"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:includeFontPadding="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#bababa"
            android:padding="1dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_require"
                android:gravity="top"
                android:background="#ffffff"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#777a7c"
                android:singleLine="false"
                android:includeFontPadding="false"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_coupon"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠폰 사용"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/round_angle_009688"
                android:id="@+id/rl_select_coupon"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_select_coupon"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제 수단"
            android:textSize="13sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:includeFontPadding="false"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/round_angle_009688"
            android:id="@+id/rl_select_paytype"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_select_paytype"
                android:text="결제 선택"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="은행 / 예금주 : 우리은행 / 스타일맵(지세광)\n계좌번호 : 1005-602-594783"
            android:textColor="#4b4b4b"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/bt_question"
        android:background="#009688"
        android:text="교환, 환불 기타 문의"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
</LinearLayout>