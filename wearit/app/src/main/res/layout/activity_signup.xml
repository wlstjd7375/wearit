<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.wearit.android.view.account.SignupActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_border"
        layout="@layout/toolbar_with_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="E-mail"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textNoSuggestions"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="비밀번호"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textNoSuggestions"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="비밀번호 확인"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textNoSuggestions"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_weight="1"
                    android:hint="NAME"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:hint="생년원일"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_weight="1"
                    android:hint="Phone number"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:background="@color/signup_button_color"
                    android:text="문자인증"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_weight="1"
                    android:hint="인증번호"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:background="@color/signup_button_color"
                    android:text="인증확인"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_weight="1"
                    android:hint="주소"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:background="@color/signup_button_color"
                    android:text="주소찾기"
                    android:textSize="12sp"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="나머지 주소 입력력"
                android:textSize="13sp"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/black"
                android:backgroundTint="@color/edittext_color"
                android:inputType="textNoSuggestions"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:text="선택사항"
                android:textSize="13sp"
                android:textColor="@color/edittext_hint_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_edittext_height"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:hint="키 (CM)"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/signup_edittext_height"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:hint="몸무게 (KG)"
                    android:textSize="13sp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/edittext_color"
                    android:inputType="textNoSuggestions"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/edittext_hint_color"
                android:text="@string/signup_information"
                android:textSize="10sp"/>
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="54dp"
                android:background="@color/white_gray"
                android:text="SIGN UP"
                android:textColor="@color/black"
                android:textSize="13sp"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
