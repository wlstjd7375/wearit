<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/bag_keep_listrow_height">

    <!-- left product image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- right, product info -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_delivery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="14dp"
            android:gravity="end"
            android:text="브랜드 당 20만원 이상 무료 배달"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_delivery_info"
            android:layout_marginTop="11dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBrand"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/tvSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBrand"
            android:layout_marginTop="43dp"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:includeFontPadding="false" />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSalePrice"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:includeFontPadding="false" />

        <!-- size, item count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPrice"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="33dp">
            <TextView
                android:id="@+id/tvSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tvItemCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tvModify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="수정"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>