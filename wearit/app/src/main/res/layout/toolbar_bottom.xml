<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottombar_height_border"
    android:orientation="horizontal"
    android:theme="@style/Toolbar"
    android:background="@color/white_gray"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombar_height"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llBtnMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:src="@drawable/bt_main"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:src="@drawable/bt_main_search"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnBag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:src="@drawable/bt_bag"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:src="@drawable/keep"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:src="@drawable/bt_my"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>